 * ask the user to input a number between 1-5 and then print the number out in word form
 */
 /* psuedocode:
 *Ask the user to unput their number
 *Use if and else if statements to find which number was input
 *Then use cout to output the number
  */



#include <iostream>
// uses the preprocessor directive to add the ability to use input and output
using namespace std;
// established the standard library to clean up the code and not enter std repeatedly 
int main()
// creates the main function that the program operates in
{
    int num;
    // creates the variable that the users integer will be stored in
    
	cout << "Please enter an integer between 1 and 5" << endl;
    // prompts the user to enter the number
    cin >> num;
    // stores the users number into a variable
    if (num == 1 )
        // compares the user number to a numeric digit
    {
        cout << "You entered the number one" << endl;
    }
       // if that digit matches then it prints out the number word 
    else if (num == 2 )
        // uses an else if to continue to search for the match
        // compares the user number to a numeric digit
    {
        cout << "You entered the number two" << endl;
        // if that digit matches then it prints out the number word 
    }
    
    else if (num == 3 )
        // compares the user number to a numeric digit    
    {
        cout << "You entered the number three" << endl;
        // if that digit matches then it prints out the number word 
    }
    
    else if (num == 4 )
        // compares the user number to a numeric digit    
    {
        cout << "You entered the number four" << endl;
        // if that digit matches then it prints out the number word 
    }
    else if (num == 5 )
        // compares the user number to a numeric digit    
    {
        cout << "You entered the number five" << endl;
        // if that digit matches then it prints out the number word 
    }
    
	return 0;
    // returns an int in order to complete the requirements of the main function
}
